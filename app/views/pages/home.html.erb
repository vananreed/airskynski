<%= render "shared/banner" %>

<h2 class="text-center">Recent Items</h2>
<div class="container">
  <div class="row">
    <% @items.first(4).each do |item| %>
      <%= link_to item_path(item) do %>
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <%= render 'shared/card', item: item %>
      </div>
      <% end %>
    <% end %>
  </div>
</div>

