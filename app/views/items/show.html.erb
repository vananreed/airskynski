<div class="product-banner bg-<%=@item.category.downcase%>"></div>
<div class="container-fluid padded">
  <div class="row">
    <div class="col-md-8 product-detail">
      <div class="product-name">
        <h1><%= @item.name %></h1>
        <p><%= @item.address %></p>
        <p><strong>Daily Rate: <%= @item.price %> â‚¬</strong></p>
      </div>
      <div class="product-photo">
        <%= cl_image_tag @item.photo %>
      </div>
      <div class="container product-description">
        <div class="row">
          <div class="col-md-8">
            <h3>Description</h3>
            <p><%= @item.description %></p>
          </div>
          <div class="col-md-4">
            <%= image_tag 'tent.png' %>
          </div>
        </div>
      </div>
      <div class="edit-option">
        <% if policy(@item).edit? %>
        <%= link_to "Edit", edit_item_path(@item) %>
        <% end %>
      </div>
      <div class="reviews-container">
        <h3>Reviews</h3>
        <div class="reviews">
          <% if @item.item_reviews.presence %>
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/zentuco", class: "avatar" %>
          <% @item.item_reviews.each do |review| %>
            <div class="review-name">
              <%= review.booking.user.first_name %>
            </div>
            <div class="review-body">
                <%= review.content %>
            </div>
            <div class="review-rating">
              <% review.rating.times do %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5 -(review.rating)).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
          <% end %>
          <% else %>
          No Reviews yet!
          <% end %>
        </div>
      </div>
      <div class="linkto-search">
        <%= link_to "Back to Search", items_path %>
      </div>
    </div>
    <div class="col-md-4">
        <div class="booking-form">
    <% if @item.user != current_user %>
      <div class="booking-card">
        <h2>Your booking</h2>
        <div class="bookingform">
          <%= render "shared/booking-form", item:@item, booking:@booking %>
        </div>
        <hr>
        <ul class="guarantees">
          <li><i class="far fa-check-square"></i></i> Inmediate response</li>
          <li><i class="far fa-check-square"></i></i> Close to you</li>
          <li><i class="far fa-check-square"></i></i> Guaranteed assistance</li>
        </ul>
        <hr>
        <div class="secure-payment">
          <p>Secure Payment</p>
          <div class="payments">
            <i class="fab fa-cc-amex"></i>
            <i class="fab fa-cc-stripe"></i>
            <i class="fab fa-cc-apple-pay"></i>
          </div>
        </div>
      </div>
    <% else %>
      <h3>This is your Listing!</h3>
      <% if policy(@item).edit? %>
        <%= link_to "Edit", edit_item_path(@item) %>
      <% end %>
    <% end %>
      </div>
    </div>
  </div>
</div>

