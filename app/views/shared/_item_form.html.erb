<%= simple_form_for @item do |f| %>
  <%= f.input :name %>
  <%= f.input :description, hint: "What does your renter need to know? (size, quantity, quality, etc.)" %>
  <%= f.input :price, label: "Price per day"%>
  <%= f.input :category, collection: ["Snow", "Water", "Wind", "Outdoor"] %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.input :address %>
  <%= f.input :published %>
  <%= f.submit :submit, class:"button", value:"Post your item" %>
<% end %>
<div id="cancel-button">
  <%= link_to "Cancel", :back, class: "button button-red"%>
</div>
